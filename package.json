{
  "name": "node-sand-box",
  "version": "1.0.0",
  "main": "src/app.ts",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "start": "nodemon src/app.ts",
    "lint": "eslint --ext .ts ./src",
    "test": "mocha -r ts-node/register ./src/tests/*.spec.ts --exit"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "cors": "^2.8.5",
    "typescript": "^4.6.2",
    "pg": "^8.5.1",
    "ts-node": "^10.7.0",
    "winston": "^3.6.0",
    "express-session": "^1.17.1",
    "keycloak-connect": "^12.0.2",
    "@sequelize/core": "^7.0.0-alpha.10"
  },
  "devDependencies": {
    "mocha": "^9.2.1",
    "sinon": "^13.0.1",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "nodemon": "^2.0.15",
    "eslint": "^8.6.0",
    "prettier": "^2.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "@typescript-eslint/parser": "^5.9.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@types/node": "^16.11.26",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/sinon": "^10.0.11",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/cors": "^2.8.12",
    "@types/keycloak-connect": "^7.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": ["error", {"singleQuote": true}]
    }
  }
}
